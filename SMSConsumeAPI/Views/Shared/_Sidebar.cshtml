<!--begin::Sidebar-->
<aside class="app-sidebar bg-body-secondary shadow" data-bs-theme="dark">
    <!--begin::Sidebar Brand-->
    <div class="sidebar-brand">
        <!--begin::Brand Link-->
        <a asp-controller="Home" asp-action="Index" class="brand-link">
            <!--begin::Brand Image-->
            <img src="/assets/img/AdminLTELogo.png"
                 alt="AdminLTE Logo"
                 class="brand-image opacity-75 shadow" />
            <!--end::Brand Image-->
            <!--begin::Brand Text-->
            <span class="brand-text fw-light">Student Management</span>
            <!--end::Brand Text-->
        </a>
        <!--end::Brand Link-->
    </div>
    <!--end::Sidebar Brand-->
    <!--begin::Sidebar Wrapper-->
    <div class="sidebar-wrapper">
        <nav class="mt-2">
            <!--begin::Sidebar Menu-->
            <ul class="nav sidebar-menu flex-column"
                data-lte-toggle="treeview"
                role="menu"
                data-accordion="false">
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">
                        <i class="nav-icon bi bi-speedometer"></i>
                        <p>
                            Dashboard
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Student" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Student" ? "active" : "")">
                        <i class="nav-icon bi bi-people"></i>
                        <p>Students</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Course" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Course" ? "active" : "")">
                        <i class="nav-icon bi bi-book"></i>
                        <p>Courses</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Enrollment" asp-action="SelectStudent" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Enrollment" ? "active" : "")">
                        <i class="nav-icon bi bi-person-check"></i>
                        <p>Enrollments</p>
                    </a>
                </li>

            </ul>
            <!--end::Sidebar Menu-->
        </nav>
    </div>
    <!--end::Sidebar Wrapper-->
</aside>
<!--end::Sidebar-->