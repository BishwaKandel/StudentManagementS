@model SMSConsumeAPI.Models.Enrollment

@{
    ViewData["Title"] = "Select Student";
}

<h2>Select Student to View Enrollments</h2>

<form asp-action="Index" method="get">
    <div class="form-group mb-3">
        <label for="studentId">Student</label>
        <select name="studentId" class="form-control" asp-items="ViewBag.Students" required>
            <option value="">-- Select a Student --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">View Enrollments</button>

    <a asp-action="AddEnrollment" asp-controller="Enrollment" class="btn btn-success">
        Add Enrollment
    </a>
</form>