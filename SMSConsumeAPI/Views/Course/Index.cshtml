@model IEnumerable<SMSConsumeAPI.Models.Course>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@{
    ViewData["Title"] = "Fetching Data from Web API";
}

<h2>Courses</h2>

<p>
    <a asp-action="AddCourse" class="btn btn-success">Add New Course</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayName("Id")</th>
            <th>@Html.DisplayName("Name")</th>
            <th>@Html.DisplayName("Description")</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var row in Model)
        {
            <tr>
                <td>@row.Id</td>
                <td>@row.Name</td>
                <td>@row.Description</td>
                <td>
                    <a asp-action="EditCourse" asp-route-id="@row.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="DeleteCourse" asp-route-id="@row.Id" class=" btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
