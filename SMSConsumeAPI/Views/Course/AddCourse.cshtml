@model SMSConsumeAPI.Models.Course
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@{
    ViewData["Title"] = "Add Course";
}

<h2>Add Course</h2>

<form asp-action="AddCourse" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Course Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Course Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Course</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

